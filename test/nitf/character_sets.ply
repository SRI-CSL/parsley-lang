// NITF Image Segment Parsley Definition
//
// Description: Defining the character sets required by NITF based on Page 6 of the spec
// 
// SRI International, 2022

format{
    // Extended Character Set
    ECS := (# ["\x20" .. "\x7E"] | ["\xA0" .. "\xFF"] | ["\x0A"] | ["\x0C"] | ["\x0D"] #);;
    ECS_A := (# ["\x20" .. "\x7E"] | ["\xA0" .. "\xFF"] #);;

    // Basic Character Set
    BCS := (# ["\x20" .. "\x7E"] | ["\x0A"] | ["\x0C"] | ["\x0D"] #);;
    BCS_A := (# ["\x20" .. "\x7E"] #);;
    BCS_N := (# ["\x30" .. "\x39"] | ["\x2B"] | ["\x2D"] | ["\x2E"] | ["\x2F"] #);;
    BCS_N_INT := (# ["\x30" .. "\x39"] | ["\x2B"] | ["\x2D"] #);;
    BCS_N_INT_POS := (# ["\x30" .. "\x39"] #);;

    // date and time
    CC := (#["0".."9"] ^ 2u #);;
    YY := (#["0".."9"] ^ 2u #);;
    MM := (# (["0"] ["1" .. "9"])    | (["1"] ["0" .. "2"]) #);;
    DD := (# (["0"] ["1" .. "9"])    | (["1"|"2"] ["0" .. "9"]) | (["3"]["0" .. "1"]) #);;
    Hours := (# (["0"] ["1" .. "9"]) | (["1"] ["0" .. "9"])     | (["2"] ["0" .. "3"]) #);;
    Minutes := (# ["0" .. "5"] ["0" .. "9"] #);;
    Seconds := (# ["0" .. "5"] ["0" .. "9"] #);;
    CCYYMMDD := (#CC YY MM DD#);;
    CCYYMMDDhhmmss := (#CC YY MM DD Hours Minutes Seconds#)
}
